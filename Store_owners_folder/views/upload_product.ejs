<!DOCTYPE html>
<html>
    <head>
        <style>
            #header{
                text-align: center;
                font-size: 44px;
                font-family: monospace sans-serif;
                font-weight: 600;
                /* width: 50%;
                height: 50%;
                left: 25%;
                right: 25%; */
        
            }

            #span{
                color: orange;
                font-size: 50px;
                font-family:  'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
                font-weight: 700px;
            }

            #sidebar_main_div{
                 width: 100%; 
                 padding: 5px;
                 border-radius: 10px;
                 top: 0px;
                bottom: 0px; 
                left: 0px;
                display: flex;
                flex-direction: row;
                justify-content: space-evenly;
                align-items: center;
                flex-wrap: wrap;
                background-color: orange;
            }

            .sidebar_main_div_inner_button{
                border: 2px solid black;
                border-radius: 10px;
                margin-bottom: 20px;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

         
            .sidebar_main_div_inner_div_inner_p{
                text-align: center;
                font-family: monospace;
                font-size: 20px;

            }

            .sidebar_main_div_inner_div_inner_img{
                width: 70px;
                border-radius: 5px;
                

            }

            #upload_new_product_to_database_main_outer_div{
                border: 2px solid black;
                padding: 5px;
                border-radius: 15px;
                
            }

            #upload_new_product_to_database_image_element{
                height: 25%;
                width: 25%;
                border-radius: 7px;
            }
            

            #upload_new_product_to_database_form_element{
                display: flex;
                flex-direction: column;
                /* width: 50%;
                height: 50%;
                left: 25%;
                right: 25%; */
            }

            .upload_new_product_to_database_input_element{
                margin-top:7px;
                padding: 20px;
                border: 2px solid orange;
                border-radius: 25px;
                font-size: 20px;
                font-family: monospace  sans-serif;
            }

            .sidebar_main_div_inner_input{
                color: black;
                background-color: orange;
                font-size: 16px;
                font-family: monospace;
                border-radius: 6px;
                padding: 20px;
                border: 1px solid black;
            }
            .Store_name{
                text-align: center;
                font-family: monospace;
                font-size: 45px;
            }

        </style>
    </head>
  

    <body>
        <div id="sidebar_main_div">
            <div class="sidebar_main_div_inner_button">
                <p class="sidebar_main_div_inner_div_inner_p">Upload Products</p>
                <img src="upload.png" alt="" class = "sidebar_main_div_inner_div_inner_img">
                <form action="/Upload_Products" method="get">
                    <input type="submit" value="Click here to upload new Product" class="sidebar_main_div_inner_input">
                </form>
            </div>
            <div class="sidebar_main_div_inner_button">
                <p class="sidebar_main_div_inner_div_inner_p">Update Product's Info</p>
                <img src="update.png" alt=""  class = "sidebar_main_div_inner_div_inner_img">
                <form action="/Update_Products_information" method="get">
                    <input type="submit" value="Click here to update product's info" class="sidebar_main_div_inner_input">
                </form>
            </div>
            <div class="sidebar_main_div_inner_button">
                <p class="sidebar_main_div_inner_div_inner_p">Placed Orders</p>
                <img src="order.png" alt=""  class = "sidebar_main_div_inner_div_inner_img">
                <form action="/Placed_orders" method="get">
                    <input type="submit" value="Click here to view placed order" class="sidebar_main_div_inner_input">
                </form>
            </div>
        </div>

         <div id="upload_new_product_to_database_main_outer_div">
            <div class="Store_name"><%=Store_owner_information.Store_name%></div>
            <h1 id="header">Upload a <span id="span">new</span> product</h1>
           <form action="upload_new_product_to_database" method="post" id="upload_new_product_to_database_form_element" enctype="multipart/form-data">
           <input type="hidden" value="<%=Store_owner_information.Store_id%>" name="Store_owner_id">
            <img id="upload_new_product_to_database_image_element">
            <input type="file" accept="image/*" class="upload_new_product_to_database_input_element" name="Product_image" required>
            <input type="text"  class="upload_new_product_to_database_input_element" required placeholder="Enter the product's name" name="Product_name">
            <input type="number"  class="upload_new_product_to_database_input_element" required placeholder="Enter the product's price (This is in naira)" name="Product_price">
            <input type="submit" value="Upload product"  class="upload_new_product_to_database_input_element">
         </form>
        </div>
        
   <script>

    let upload_new_product_to_database_input_element = document.getElementsByClassName("upload_new_product_to_database_input_element")
    let upload_new_product_to_database_image_element = document.getElementById("upload_new_product_to_database_image_element")
    let sidebar_main_div_inner_button = document.getElementsByClassName("sidebar_main_div_inner_button");
    upload_new_product_to_database_input_element[0].addEventListener("change",(e)=>{
        if(upload_new_product_to_database_input_element[0].files.length > 0){
            const file = e.target.files[0];
            upload_new_product_to_database_image_element.src = URL.createObjectURL(file)

        }
    })

    
   </script>
    </body>
</html>